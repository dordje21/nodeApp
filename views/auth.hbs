<h1>{{title}}</h1>

<div class="row">
    <div class="col s12">
        <ul class="tabs tabs-auth">
            <li class="tab col s6"><a class="active" href="#login">Login</a></li>
            <li class="tab col s6"><a href="#register">Register</a></li>
        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

        <form action="/auth/login" method="post">

            <div class="input-field">
                <input placeholder="email" id="email" name="email" type="email" class="validate" required>
                <label for="first_name">email</label>
                <span class="helper-text" data-error="wrong" data-success="right"></span>
            </div>

            <div class="input-field">
                <input placeholder="password" id="password" name="password" type="password" class="validate" required autocomplete="new-password"
                       passwordrules="required: upper; required: lower; required: digit;
                 minlength: 25; allowed: [-().&@?'#,/&quot;+]; max-consecutive: 2">
                <label for="first_name">Password</label>
                <span class="helper-text" data-error="wrong" data-success="right"></span>
            </div>

            <button class="btn waves-effect waves-light" type="submit" name="action">Login</button>

        </form>

    </div>
    <div id="register" class="col s6 offset-s3">
        <form action="/auth/register" method="post">

            <div class="input-field">
                <input placeholder="email" id="regEmail" name="email" type="email" class="validate" required>
                <label for="first_name">email</label>
                <span class="helper-text" data-error="wrong" data-success="right"></span>
            </div>

            <div class="input-field">
                <input placeholder="Name" id="regName" name="name" type="text" class="validate" required>
                <label for="first_name">Name</label>
                <span class="helper-text" data-error="wrong" data-success="right"></span>
            </div>

            <div class="input-field">
                <input placeholder="password" id="regPassword" name="password" type="password" class="validate" required autocomplete="new-password"
                       passwordrules="required: upper; required: lower; required: digit;
                 minlength: 25; allowed: [-().&@?'#,/&quot;+]; max-consecutive: 2">
                <label for="first_name">Password</label>
                <span class="helper-text" data-error="wrong" data-success="right"></span>
            </div>

            <div class="input-field">
                <input placeholder="password" id="confirmRegPassword" name="confirmPassword" type="password" class="validate" required autocomplete="new-password"
                       passwordrules="required: upper; required: lower; required: digit;
                 minlength: 25; allowed: [-().&@?'#,/&quot;+]; max-consecutive: 2">
                <label for="first_name">Password again</label>
                <span class="helper-text" data-error="wrong" data-success="right"></span>
            </div>

            <button class="btn waves-effect waves-light" type="submit" name="action">Register</button>

        </form>
    </div>
</div>