<h1>Cart</h1>

<div id="cart">
{{#if courses.length}}
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Count</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
        </thead>

    <tbody>
        {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td><div class="price">{{price}}</div></td>
                <td>
                    <button class="btn red btn-small js-remove" data-id="{{id}}">Delete</button>
                </td>
            </tr>
        {{/each}}
    </tbody>
    </table>

    <p>Price: <b><span class="price cart-price">{{price}}</span></b></p>

    <div>
        <form action="/order" method="post">
            <button type="submit" class="btn">
                Order
            </button>
        </form>
    </div>
{{else}}
    <p>Cart is empty</p>
{{/if}}
</div>